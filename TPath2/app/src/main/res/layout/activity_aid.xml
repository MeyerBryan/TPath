<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Aid">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/undergrad2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/AID"
                    android:text="@string/financial_aid"
                    android:textColor="@color/colorPrimaryDark" android:textStyle="bold"
                    app:fontFamily="@font/carter_one" android:textSize="24sp" android:gravity="center"
                    android:background="@color/colorheader" android:visibility="visible"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/FInview1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp" app:srcCompat="@drawable/calrta" android:id="@+id/imageView4"
            />
            <TextView
                    android:text="The Scholarshipp Foundation Inc. is awarding scholarships to students who are enrolled/plan to enroll in the teacher credentialing program at a School of Education within the CSU or UC System for the upcoming year. Scholarships of $1500 will be awarded."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Apply for Scholarship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/schbtn"
                    android:background="@color/background"/>
            <ImageView
                    app:srcCompat="@drawable/teachgrant"
                    android:id="@+id/imageView5" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:text="The TEACH Grant Program provides grants of up to $4,000 a year to students who are completing or plan to complete course work needed to begin a career in teaching."
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="Learn More!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/teachbtn"
                    android:background="@color/background"/>
            <ImageView
                    android:layout_height="wrap_content" app:srcCompat="@drawable/proaccept"
                    android:id="@+id/imageView6" android:layout_width="match_parent" android:adjustViewBounds="true"/>
            <TextView
                    android:text="TextViewThe grant awards 25 scholarships of $3,000 annually to teacher candidates who successfully complete the Bilingual Authorization Program in conjunction with their teacher credential program in the School of Education, CSUSM. "
                    android:layout_width="match_parent"
                    android:id="@+id/textView3" android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"/>
            <Button
                    android:text="APPLY FOR SCHOLARSHIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/langbtn"
                    android:background="@color/background"/>
            <TextView
                    android:text="View more Grants and Scholarships at csusm! "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textColor="@color/colorPrimaryDark" android:textSize="24sp"/>
            <Button
                    android:text="View More scholarships!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/csusmsch"
                    android:background="@color/background"/>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="INFO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/INFO" app:layout_constraintStart_toStartOf="@+id/toolbar3"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar3" app:layout_constraintTop_toTopOf="@+id/toolbar3"
            android:background="@color/colorPrimaryDark" android:textColor="@color/colorAccent"/>
    <Button
            android:text="@string/undergrad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undergrad2"
            android:background="@color/colorPrimaryDark" android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/toolbar3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/POST" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/INFO" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/POST" android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="@+id/toolbar3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar3" app:layout_constraintTop_toTopOf="@+id/toolbar3"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>